<% layout("./layout/boilerplate")%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <div class="card shadow-lg">
      <div class="card-body">
        <h1 class="card-title text-center mb-4">Edit Your Listing</h1>
        
        <form method="POST" 
              action="/listings/<%=listing._id%>?_method=PUT" 
              class="needs-validation" 
              novalidate 
              enctype="multipart/form-data">

          <!-- Title Input -->
          <div class="mb-3">
            <label for="title" class="form-label">
              <i class="fas fa-heading me-2 icon"></i>Title
            </label>
            <input 
              name="listing[title]" 
              type="text" 
              class="form-control" 
              id="title"
              value="<%= listing.title %>"
              required
            >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a title.</div>
          </div>

          <!-- Description Input -->
          <div class="mb-3">
            <label for="description" class="form-label">
              <i class="fas fa-align-left me-2 icon"></i>Description
            </label>
            <textarea 
              name="listing[description]" 
              class="form-control" 
              id="description"
              required
            ><%= listing.description %></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a description.</div>
          </div>

          <!-- Image Section -->
          <div class="mb-3">
            <label class="form-label">Current Image</label>
            <img src="<%= originalImageUrl %>" class="img-thumbnail mb-2" alt="Current listing image">
            
            <div class="mb-3">
              <label for="image" class="form-label">
                <i class="fas fa-images me-2 icon"></i>Update Image
              </label>
              <input 
                name="listing[image]" 
                type="file" 
                class="form-control" 
                id="image"
              >
            </div>
          </div>

          <!-- Price Input -->
          <div class="mb-3">
            <label for="price" class="form-label">
              <i class="fas fa-tag me-2 icon"></i>Price
            </label>
            <div class="input-group">
              <span class="input-group-text">â‚¹</span>
              <input 
                name="listing[price]" 
                type="number" 
                class="form-control" 
                id="price"
                value="<%= listing.price %>"
                required
              >
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide a valid price.</div>
            </div>
          </div>

          <!-- Location Input -->
          <div class="mb-3">
            <label for="location" class="form-label">
              <i class="fas fa-map-marker-alt me-2 icon"></i>Location
            </label>
            <input 
              name="listing[location]" 
              type="text" 
              class="form-control" 
              id="location"
              value="<%= listing.location %>"
              required
            >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a location.</div>
          </div>

          <!-- Country Input -->
          <div class="mb-3">
            <label for="country" class="form-label">
              <i class="fas fa-globe me-2 icon"></i>Country
            </label>
            <input 
              name="listing[country]" 
              type="text" 
              class="form-control" 
              id="country"
              value="<%= listing.country %>"
              required
            >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a country.</div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid gap-2">
            <button class="btn btn-dark btn-lg hover-effect add-listing-btn">
              <i class="fas fa-edit me-2 a"></i>Update Listing
            </button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
